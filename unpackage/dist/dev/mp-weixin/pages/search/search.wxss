.search-search {
  display: flex;
  align-items: center;
  height: 70rpx;
  margin: 70rpx 30rpx 50rpx 30rpx;
  background: #f7f7f7;
  border-radius: 50rpx;
}
.search-search text {
  margin: 0 26rpx;
}
.search-search input {
  flex: 1;
  flex-shrink: 0;
  font-size: 26rpx;
}
.search-history {
  width: 100%;
  font-size: 30rpx;
}
.search-history .search-history-head {
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.search-history .search-history-list {
  font-size: 26rpx;
  display: flex;
  flex-wrap: wrap;
}
.search-history .search-history-list view {
  padding: 16rpx 28rpx;
  border-radius: 40rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  background-color: #d0d0d0;
}
.search-hot {
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 26rpx;
}
.search-hot .search-hot-header {
  font-size: 30rpx;
  margin: 30rpx 0;
}
.search-hot .search-hot-item {
  display: flex;
  align-items: center;
  margin-bottom: 58rpx;
}
.search-hot .search-hot-item .search-hot-left {
  color: red;
  width: 60rpx;
  margin-left: 8rpx;
}
.search-hot .search-hot-item .search-hot-middle {
  flex: 1;
  flex-shrink: 0;
}
.search-hot .search-hot-item .search-hot-middle view:nth-of-type(1) text {
  font-size: 28rpx;
  color: black;
}
.search-hot .search-hot-item .search-hot-middle view:nth-of-type(1) image {
  width: 48rpx;
  height: 22rpx;
}
.search-hot .search-hot-item .search-hot-middle view:nth-of-type(2) {
  font-size: 24rpx;
  color: #c0c0c0;
}
.search-hot .search-hot-item .search-hot-right {
  font-size: 24rpx;
  color: #c0c0c0;
}
.search-result {
  border-top: 4rpx #c0c0c0 solid;
  padding: 30rpx;
  box-sizing: border-box;
}
.search-result .search-result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #dfdfdf;
  padding-bottom: 20rpx;
}
.search-result .search-result-item .text-content view:nth-of-type(1) {
  font-size: 28rpx;
  color: #5379a7;
}
.search-result .search-result-item .text-content view:nth-of-type(2) {
  font-size: 22rpx;
  color: #999999;
}
.search-result .search-result-item .icon-right text {
  font-size: 50rpx;
}
.search-suggest {
  border-top: 4rpx #c0c0c0 solid;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.search-suggest .search-suggest-header {
  color: #15475a;
  margin: 20rpx 20rpx 70rpx 20rpx;
}
.search-suggest .search-suggest-item text {
  margin: 10rpx;
  line-height: 60rpx;
}


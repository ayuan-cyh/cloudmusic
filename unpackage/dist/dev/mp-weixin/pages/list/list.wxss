.list-hearder {
  width: 95%;
  justify-content: space-around;
  display: flex;
  height: 300rpx;
  margin: 0 auto;
  overflow: hidden;
}
.list-hearder .list-hearder-imgBox {
  width: 264rpx;
  height: 264rpx;
  position: relative;
}
.list-hearder .list-hearder-imgBox image {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
.list-hearder .list-hearder-imgBox text {
  position: absolute;
  bottom: 15rpx;
  left: 15rpx;
}
.list-hearder .list-text-container {
  flex: 1;
  margin-left: 20rpx;
}
.list-hearder .list-text-container view:nth-of-type(1) {
  color: #ffffff;
  font-size: 35rpx;
  width: 100%;
  height: 70rpx;
  overflow: hidden;
}
.list-hearder .list-text-container view:nth-of-type(2) {
  display: flex;
  color: #f3f3f3;
  font-size: 28rpx;
  align-items: center;
}
.list-hearder .list-text-container view:nth-of-type(2) image {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-right: 14rpx;
  box-sizing: border-box;
}
.list-hearder .list-text-container view:nth-of-type(3) {
  width: 100%;
  height: 60rpx;
  line-height: 30rpx;
  color: #dfdee2;
  font-size: 24rpx;
  margin-top: 20rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.share-list {
  width: 300rpx;
  height: 72rpx;
  background-color: rgba(0, 0, 0, 0.4);
  margin: 0 auto;
  line-height: 72rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 32rpx;
  color: #ffffff;
}
.music-list {
  border-radius: 25px 25px 0 0;
  background-color: #ffffff;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
  margin-top: 40rpx;
}
.music-list .music-list-top {
  padding-bottom: 40rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
}
.music-list .music-list-top text {
  margin-left: 20rpx;
}
.music-list .music-list-item {
  display: flex;
  margin-top: 20rpx;
  width: 100%;
}
.music-list .music-list-item .item-left {
  width: 100rpx;
}
.music-list .music-list-item .item-middle {
  display: flex;
  width: 80vw;
  flex-direction: column;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.music-list .music-list-item .item-middle .top {
  width: 90%;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.music-list .music-list-item .item-middle .bottom {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  align-items: center;
}
.music-list .music-list-item .item-middle .bottom image {
  width: 32rpx;
  flex-shrink: 0;
  height: 20rpx;
  margin-right: 5rpx;
}
.music-list .music-list-item .item-right text {
  font-size: 50rpx;
}

